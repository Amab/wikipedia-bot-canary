{
  "name": "wikipedia-bot-canary",
  "version": "1.0.0",
  "description": "A bot where you can search Wikipedia articles with it. Not affiliated with any service or product of the Wikimedia Foundation.",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "yarn watch | yarn pc",
    "watch": "nodemon src/index.ts",
    "pc": "pino-colada",
    "build": "tsc",
    "lint": "eslint --ext .ts ./src",
    "lint:fix": "eslint --ext .ts ./src --fix",
    "contributors:add": "all-contributors add",
    "contributors:check": "all-contributors check",
    "contributors:generate": "all-contributors generate",
    "zk:init": "cd docker-compose && mkdir data && sudo chown 1001 data",
    "zk:start": "docker-compose -f docker/zookeeper.yml up -d",
    "zk:stop": "docker-compose -f docker/zookeeper.yml down"
  },
  "dependencies": {
    "@fluent/bundle": "^0.16.1",
    "dotenv": "^8.2.0",
    "fastify": "^3.20.2",
    "ioredis": "^4.27.8",
    "jsonschema": "^1.4.0",
    "pino": "^7.0.0-rc.3",
    "slash-create": "^4.0.1",
    "wikijs": "^6.3.2",
    "zookeeper": "^4.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/ioredis": "^4.27.1",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "all-contributors-cli": "^6.20.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.3.0",
    "nodemon": "^2.0.12",
    "pino-colada": "^2.1.0",
    "pino-pretty": "^6.0.0",
    "prettier": "^2.2.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.2.3"
  },
  "engines": {
    "node": ">=14.x.x",
    "yarn": ">=2.x.x"
  }
}
